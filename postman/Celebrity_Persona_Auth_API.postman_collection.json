              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"USER_ID_HERE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/superadmin/manage-users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "superadmin", "manage-users"]
